.index-page {
  height: 100%;
  position: relative;
}
.swiper {
  width: 100%;
  height: 100%;
}
.item {
  height: 100%;
}
.slide-image {
  height: 100%;
  width: 100%;
}
.btn-group, .input-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 30rpx;
  width: 100%;
  padding: 0 1rem;
  box-sizing: border-box;
}
.input {
  background-color: #fff;
  padding: 0.2em;
  border-radius: 2px;
  font-size: 14px;
  flex: 1;
}
.back, .send {
  font-size: 14px;
  margin: 0;
  margin-left: 20rpx;
  padding: 0.2em 0.5em !important;
}
.send {
  padding: 0.2em 1.5em !important;
}

.button {
  width: 40%;
}
.map-btn {
  background-color: blue;
  display: flex;
  align-items: center;
  padding: 10px 10px;
}
.map {
  width: 50rpx;
  height: 50rpx;
}
.info {
  background-color: #46b8da;
  color: white;
}
.animation-wrapper {
  position: absolute;  
  height: 100%;
  width: 300%;

  top: 0;
  left: 0;
}
.message-wrapper {
  position: absolute;
  display: flex;
  top: 0;
  left: 0;
  align-items: center;
  animation-name: move;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  flex-wrap: nowrap;
  white-space: nowrap;
  /* ani */
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}
@keyframes move {
  to {
    transform: translateX(-300vw);
  }
}